<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/initGameButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".33"
            android:text="INIT GAME" />

        <Button
            android:id="@+id/newWordButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".33"
            android:text="New Word" />

        <Button
            android:id="@+id/endGameButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".33"
            android:text="End Game" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/guess"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:text="Word to guess"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/guessEdit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".30"
                android:text="Remaining guesses"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/remainingEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".70"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:text="Game score"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scoreEdit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".70"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/guessField"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".60"
            android:ems="12"
            android:hint="Make guess"
            android:inputType="text" />

        <Button
            android:id="@+id/sendGuessButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".40"
            android:text="Send guess" />

    </LinearLayout>


</LinearLayout>
